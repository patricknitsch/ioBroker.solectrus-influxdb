{
  "i18n": true,
  "type": "tabs",
  "items": {
    "influx": {
      "type": "panel",
      "label": "InfluxDB",
      "items": {
        "influx.url": {
          "type": "text",
          "label": "InfluxDB URL"
        },
        "influx.org": {
          "type": "text",
          "label": "Organization"
        },
        "influx.bucket": {
          "type": "text",
          "label": "Bucket"
        },
        "influx.token": {
          "type": "password",
          "label": "Token"
        },
        "influx.interval": {
          "type": "number",
          "label": "Polling interval (ms)",
          "min": 5,
          "max": 30

        }
      }
    },
    "sensor": {
      "type": "panel",
      "label": "Sensors Settings",
      "items": {
        "sensors": {
          "type": "table",
          "label": "Solectrus Sensors",
          "sm": 12,
          "md": 12,
          "lg": 12,
          "items": [
            {
              "attr": "enabled",
              "title": "Enabled",
              "type": "checkbox",
              "width": "80px"
            },
            {
              "attr": "SensorName",
              "title": "Sensor Name",
              "type": "text",
              "width": "250px"
            },
            {
              "attr": "sourceState",
              "title": "ioBroker Source State",
              "type": "text",
              "width": "250px"
            },
            {
              "attr": "type",
              "title": "Datatype",
              "type": "select",
              "options": [
                { "label": "Default", "value": "" },
                { "label": "Integer", "value": "int" },
                { "label": "Float", "value": "float" },
                { "label": "Boolean", "value": "bool" },
                { "label": "String", "value": "string" }
              ],
              "width": "120px"
            },
            {
              "attr": "measurement",
              "title": "Influx Measurement",
              "type": "text",
              "default": "solectrus",
              "width": "150px"
            },
            {
              "attr": "field",
              "title": "Influx Field",
              "type": "text",
              "width": "150px"
            }
          ],
          "default": [
            { "enabled": true, "SensorName": "House Power", "sourceState": "", "type": "int", "measurement": "house", "field": "power" },
            { "enabled": true, "SensorName": "Battery SOC", "sourceState": "", "type": "float", "measurement": "battery", "field": "soc" },
            { "enabled": true, "SensorName": "Battery Charging Power", "sourceState": "", "type": "int", "measurement": "battery", "field": "charging_power" },
            { "enabled": true, "SensorName": "Batter Discharging Power", "sourceState": "", "type": "int", "measurement": "battery", "field": "discharging_power" },
            { "enabled": true, "SensorName": "Heatpump Power", "sourceState": "", "type": "int", "measurement": "heatpump", "field": "power" },
            { "enabled": true, "SensorName": "Heatpump Tank Temp", "sourceState": "", "type": "float", "measurement": "heatpump", "field": "tank_temp" },
            { "enabled": true, "SensorName": "Heatpump Status", "sourceState": "", "type": "string", "measurement": "heatpump", "field": "status" },
            { "enabled": true, "SensorName": "Outdoor Forecast Temperature", "sourceState": "", "type": "float", "measurement": "outdoor_forecast", "field": "temperature" },
            { "enabled": true, "SensorName": "Grid Export Power", "sourceState": "", "type": "int", "measurement": "grid", "field": "export_power" },
            { "enabled": true, "SensorName": "Grid Export Limit", "sourceState": "", "type": "int", "measurement": "grid", "field": "export_limit" },
            { "enabled": true, "SensorName": "Grid Import Power", "sourceState": "", "type": "int", "measurement": "grid", "field": "import_power" },
            { "enabled": true, "SensorName": "Wallbox Power", "sourceState": "", "type": "int", "measurement": "wallbox", "field": "power" },
            { "enabled": true, "SensorName": "Wallbox Connected", "sourceState": "", "type": "bool", "measurement": "wallbox", "field": "connected" },
            { "enabled": true, "SensorName": "Case Temperature", "sourceState": "", "type": "float", "measurement": "case", "field": "temperature" },
            { "enabled": true, "SensorName": "Car Battery SOC", "sourceState": "", "type": "float", "measurement": "car", "field": "battery_soc" },
            { "enabled": true, "SensorName": "Car Mileage", "sourceState": "", "type": "int", "measurement": "car", "field": "mileage" },
            { "enabled": true, "SensorName": "Outdoor Temperature", "sourceState": "", "type": "float", "measurement": "outdoor", "field": "temperature" },
            { "enabled": true, "SensorName": "System Status", "sourceState": "", "type": "string", "measurement": "system", "field": "status" },
            { "enabled": true, "SensorName": "System Status OK", "sourceState": "", "type": "bool", "measurement": "system", "field": "status_ok" }
          ]
        }
      }
    }
  }
}